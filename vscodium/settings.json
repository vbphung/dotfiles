{
  "Lua.diagnostics.globals": ["vim"],
  "[cmake]": {
    "editor.defaultFormatter": "josetr.cmake-language-support-vscode",
    "editor.formatOnSave": true,
    "editor.quickSuggestions": { "strings": true }
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.suggest.insertMode": "replace",
    "editor.wordBasedSuggestions": "off"
  },
  "[cuda-cpp]": {
    "editor.semanticHighlighting.enabled": true,
    "editor.suggest.insertMode": "replace",
    "editor.wordBasedSuggestions": "off"
  },
  "[dockerfile]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[dotenv]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[go.mod]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true
  },
  "[go]": {
    "editor.codeActionsOnSave": { "source.organizeImports": "always" },
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.insertSpaces": false
  },
  "[ignore]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[java]": {
    "editor.defaultFormatter": "Oracle.oracle-java",
    "editor.formatOnSave": true
  },
  "[latex]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100
  },
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.formatOnSave": true
  },
  "[properties]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[proto3]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true
  },
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[rust]": {
    "editor.codeActionsOnSave": { "source.organizeImports": "always" },
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true
  },
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools",
    "editor.formatOnSave": true
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  "[zig]": { "editor.formatOnSave": true },
  "catppuccin.accentColor": "flamingo",
  "catppuccin.italicComments": false,
  "catppuccin.italicKeywords": false,
  "chat.editing.confirmEditRequestRemoval": false,
  "clangd.detectExtensionConflicts": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "docker.lsp.experimental.vulnerabilityScanning": false,
  "docker.lsp.telemetry": "off",
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "JimmyCoffee",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.showUnused": false,
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 4,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.conf": "shellscript",
    "*.cql": "sql",
    "*.cu": "cpp",
    "*.hook": "shellscript",
    "*.rules": "shellscript",
    ".clangd": "yaml",
    "config": "shellscript"
  },
  "files.insertFinalNewline": true,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "*": true,
    "cpp": true,
    "go": false,
    "markdown": false,
    "plaintext": false,
    "scminput": false
  },
  "gradle.nestedProjects": true,
  "gruvboxMaterial.italicComments": false,
  "jdk.java.onSave.organizeImports": false,
  "jdk.jdkhome": "/usr/local/java",
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.enabled": false,
  "sqltools.format": { "language": "db2", "linesBetweenQueries": 2 },
  "sqltools.highlightQuery": false,
  "telemetry.feedback.enabled": false,
  "terminal.integrated.fontSize": 15,
  "vscode_custom_css.imports": [
    "file:///home/jim/.dotfiles/vscodium/style.css",
    "file:///Users/jim/.dotfiles/vscodium/style.css"
  ],
  "workbench.colorTheme": "Ros√© Pine (no italics)",
  "workbench.editor.showTabs": "single",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 20,
  "xml.validation.enabled": false,
  "zig.zls.enabled": "on"
}
