{
  "Lua.diagnostics.globals": ["vim"],
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.suggest.insertMode": "replace",
    "editor.wordBasedSuggestions": "off"
  },
  "[dockerfile]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[dotenv]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[go.mod]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true
  },
  "[go]": {
    "editor.codeActionsOnSave": { "source.organizeImports": "always" },
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.insertSpaces": false
  },
  "[ignore]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.formatOnSave": true
  },
  "[properties]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
  "[proto3]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true
  },
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[rust]": {
    "editor.codeActionsOnSave": { "source.organizeImports": "always" },
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true
  },
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools",
    "editor.formatOnSave": true
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  "[zig]": { "editor.formatOnSave": true },
  "catppuccin.accentColor": "flamingo",
  "catppuccin.italicComments": false,
  "catppuccin.italicKeywords": false,
  "clangd.detectExtensionConflicts": false,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "JimmyCoffee",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 4,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.conf": "shellscript",
    "*.cql": "sql",
    ".clangd": "yaml",
    "config": "shellscript"
  },
  "files.insertFinalNewline": true,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "*": true,
    "cpp": false,
    "go": true,
    "markdown": false,
    "plaintext": false,
    "scminput": false
  },
  "gruvboxMaterial.italicComments": false,
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.enabled": false,
  "sqltools.format": { "language": "db2", "linesBetweenQueries": 2 },
  "sqltools.highlightQuery": false,
  "terminal.integrated.fontSize": 15,
  "vscode_custom_css.imports": [
    "file:///home/jim/.dotfiles/vscodium/style.css",
    "file:///Users/jim/.dotfiles/vscodium/style.css"
  ],
  "workbench.colorTheme": "Ros√© Pine Moon (no italics)",
  "workbench.editor.showTabs": "single",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 20,
  "xml.validation.enabled": false,
  "zig.zls.enabled": "on"
}
